<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F5F5F5"
    tools:context=".Localizacao" >

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="393dp"
        android:layout_height="342dp"
        android:layout_marginTop="50dp"
        android:translationX="150dp"
        android:translationY="-10dp"
        app:srcCompat="@drawable/locationicon_locazacao" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView_barra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/barra_superior" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="14.5dp"
                    android:background="@drawable/back_btn"
                    android:onClick="paraMenuInicial" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="115dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:text="Localização"
                    android:textColor="@color/white"
                    android:textSize="21sp" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:translationX="35dp"
                    app:srcCompat="@drawable/burger_barra" />
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="19dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sansita_regular"
                android:text="Abertura"
                android:textColor="#555555"
                android:textSize="24sp"
                android:typeface="normal" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.5dp"
                app:srcCompat="@drawable/linebig_localizacao" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.5dp"
                android:fontFamily="@font/affogato_regular"
                android:text="Todos os dias da semana"
                android:textColor="#555555"
                android:textSize="18sp" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:orientation="horizontal"
                android:rowCount="2">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_row="0"
                    android:layout_rowSpan="2"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/rectangulo_localizacao" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:fontFamily="@font/affogato_regular"
                    android:paddingLeft="14dp"
                    android:text="Das 11h"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    app:srcCompat="@drawable/linemall_localizacao" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:fontFamily="@font/affogato_regular"
                    android:text="às 14h"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:fontFamily="@font/affogato_regular"
                    android:paddingLeft="14dp"
                    android:text="Das 19h"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    app:srcCompat="@drawable/linemall_localizacao" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:fontFamily="@font/affogato_regular"
                    android:text="às 23h"
                    android:textSize="18dp" />
            </GridLayout>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:fontFamily="@font/sansita_regular"
                android:text="A Nossa Morada"
                android:textColor="#555555"
                android:textSize="24sp"
                android:typeface="normal" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.5dp"
                app:srcCompat="@drawable/linebig_localizacao" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.5dp"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="2">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:fontFamily="@font/affogato_regular"
                    android:paddingLeft="14dp"
                    android:text="Rua Do Salgueiral, nº 104"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:fontFamily="@font/affogato_regular"
                    android:paddingLeft="14dp"
                    android:text="Ansião, Leiria"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_row="0"
                    android:layout_rowSpan="2"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/rectangulo_localizacao" />

            </GridLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:scaleX="1.11"
            app:srcCompat="@drawable/mapa_localizacao" />
    </LinearLayout>
</FrameLayout>