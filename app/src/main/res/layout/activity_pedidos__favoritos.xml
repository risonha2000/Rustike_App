                    android:layout_marginTop="9.5dp"
                    android:fontFamily="@font/affogato_regular"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    tools:text="12€" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37dp"
                android:onClick="paraHistoricoPedido">

                <ImageView
                    android:id="@+id/fundo_fav_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="paraHistoricoPedido"
                    app:srcCompat="@drawable/b_icon" />

                <ImageView
                    android:id="@+id/icon_fav_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="paraHistoricoPedido"
                    app:srcCompat="@drawable/icon_favoritos" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="paraHistoricoPedido"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/p_personalizado_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/affogato_regular"
                    android:onClick="paraHistoricoPedido"
                    android:text="Jucie Lucy"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/linha_fav_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
