            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/p_personalizado_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/affogato_regular"
                    android:text="Jucie Lucy"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/linha_fav_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8.5dp"
                    android:layout_marginRight="45.5dp"
                    app:srcCompat="@drawable/linha_favoritos" />

                <TextView
                    android:id="@+id/preco_personalizado_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="9.5dp"
                    android:fontFamily="@font/affogato_regular"
                    android:textColor="#000000"
                    android:textSize="18sp"
